    <div class="gateway-config">
      <div class="config-section">
        <h4>Midtrans Configuration</h4>
        <div class="form-group">
          <label>Merchant ID:</label>
          <input type="text" class="form-control" value="G123456789" placeholder="Masukkan Merchant ID">
        </div>
        <div class="form-group">
          <label>Client Key:</label>
          <input type="text" class="form-control" value="SB-Mid-client-123456789" placeholder="Masukkan Client Key">
        </div>
        <div class="form-group">
          <label>Server Key:</label>
          <input type="password" class="form-control" value="••••••••••••••••" placeholder="Masukkan Server Key">
        </div>
        <div class="form-group">
          <label>Environment:</label>
          <select class="form-control">
            <option>Sandbox (Testing)</option>
            <option>Production</option>
          </select>
        </div>
        <div class="form-group">
          <label>Status:</label>
          <span class="status-badge active">Aktif</span>
        </div>
      </div>
      
      <div class="config-section">
        <h4>Xendit Configuration</h4>
        <div class="form-group">
          <label>API Key:</label>
          <input type="password" class="form-control" value="••••••••••••••••" placeholder="Masukkan API Key">
        </div>
        <div class="form-group">
          <label>Callback URL:</label>
          <input type="text" class="form-control" value="https://yourdomain.com/callback/xendit" placeholder="Masukkan Callback URL">
        </div>
        <div class="form-group">
          <label>Environment:</label>
          <select class="form-control">
            <option>Sandbox (Testing)</option>
            <option>Production</option>
          </select>
        </div>
        <div class="form-group">
          <label>Status:</label>
          <span class="status-badge inactive">Nonaktif</span>
        </div>
      </div>
      
      <div class="config-section">
        <h4>Tripay Configuration</h4>
        <div class="form-group">
          <label>Merchant Code:</label>
          <input type="text" class="form-control" value="T123456" placeholder="Masukkan Merchant Code">
