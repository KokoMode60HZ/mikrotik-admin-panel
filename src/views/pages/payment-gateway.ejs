        <div class="form-group">
          <label>Environment:</label>
          <select class="form-control">
            <option>Sandbox (Testing)</option>
            <option>Production</option>
          </select>
        </div>
        <div class="form-group">
          <label>Status:</label>
          <span class="status-badge active">Aktif</span>
        </div>
      </div>
    </div>
